$("#Authentication").submit(function(){
	
	if ($("#Authentication_login").val() == "" && $("#Authentication_password").val() == ""){
		$("#message").empty();
		$("#message").append("Please provide your login and password");
				
		return false;
		
	} 
	if($("#Authentication_login").val() == "") {
		$("#message").empty();
		$("#message").append("Please provide your login");
		
		return false;
	}
	
	if($("#Authentication_password").val() == "") {
		$("#message").empty();
		$("#message").append("Please provide your password");
		
		return false;
	}
	
	return true;
	
});